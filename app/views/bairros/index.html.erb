<h1>Lista de Bairros</h1>

<table>
  <tr>
    <th>Id:</th>
    <th>Bairro:</th>
    <th>Cidades:</th>
  </tr>

<% @bairros.each do |bairro| %>
  <tr>
  <td style="text-align: center;border-style: solid; border: 1px solid black; border-radius: 2px;"><%= bairro.id %></td>
  <td style="text-align: center;border-style: solid; border: 1px solid black; border-radius: 2px;"><%= bairro.nome %></td>
  <td style="text-align: center;border-style: solid; border: 1px solid black; border-radius: 2px;"><%= bairro.cidade.try(:nome)%></td>
  <td style="border-style: groove; border-radius: 4px"><%= link_to 'Visualizar', bairro %></td>
  <td style="border-style: groove; border-radius: 4px"><%= link_to 'Editar', edit_bairro_path(bairro) %></td>
  <td style="border-style: groove; border-radius: 4px"><%= link_to 'Deletar', bairro, method: :delete, data: { confirm: 'VocÃª tem certeza?' } %></td>
  </tr>
  <% end %>
</table>
 <br>
  <b style="border-style: groove; border-radius: 4px"><%= link_to 'Novo Bairro', new_bairro_path %></b>

